{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@errors/*": ["./errors/*"],
      "@database/*": ["database/*"],
      "@docs/*": ["docs/*"],
      "@routes/*": ["routes/*"],
      "@tmp/*": ["tmp/*"],
      "@utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
